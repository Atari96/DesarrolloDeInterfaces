<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiLogIn.MainPage">

    <StackLayout>
        <Label Text="Usuario" />
        <Entry Placeholder="usuario" x:Name="usuarioEntry"/>
        <Label Text="Password" />
        <Entry Placeholder="contraseña" x:Name="passwordEntry"/>
        <Button Text="OK" Clicked="loginBtn"/>
        <Label Text="Recuperar password" />
        <Label Text="Registro" />
    </StackLayout>

</ContentPage>
